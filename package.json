{
  "name": "starter",
  "version": "1.0.0",
  "description": "A quick up and running node ts project",
  "main": "index.ts",
  "scripts": {
    "test": "jest",
    "build:watch": "tsc --watch",
    "server": "nodemon --exec node build/index.js",
    "format": "prettier --write \"**/*.+(ts|json|js|)\"",
    "start": "concurrently \"yarn run build:watch\" \"yarn run server\"",
    "production": "tsc && node build/index.js"
  },
  "author": "ctobolski",
  "license": "MIT",
  "devDependencies": {
    "@types/graphql": "14.2.0",
    "@types/jest": "^24.0.11",
    "@types/koa": "2.0.48",
    "@types/node": "^11.11.3",
    "concurrently": "^4.1.0",
    "jest": "^24.5.0",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "ts-jest": "^24.0.0",
    "ts-loader": "^5.3.3",
    "tslint": "5.16.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-config-standard": "8.0.1",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "@koa/cors": "3.0.0",
    "apollo-server-koa": "2.4.8",
    "dotenv": "8.0.0",
    "graphql": "14.2.1",
    "koa": "2.7.0",
    "pg": "7.10.0"
  }
}